/*******************************
         Theme Overrides
*******************************/

.ui.basic.label {
    &.filter-label {
        padding-left: 15px !important;
        padding-right: 15px !important;

        &:hover {
            color: @filterLabelHoverTextColor;
            background: @filterLabelHoverBackgroundColor;
            border-color: @filterLabelBorderColor;
        }
        &.active {
            border-color: @filterLabelBorderColor;
        }
    }
}

.ui.label {
    &.properties-label {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 11px 14.5px;
    }
}

/*******************************
            Sizing
*******************************/

.ui.label {
    &.mini {
        &.compact {
            padding: 0.4em;
        }
        &.spaced {
            &-left {
                margin-left: 0.4em;
            }
            &-right {
                margin-right: 0.4em;
            }
        }
    }
}

.ui.circular.label {
    &.micro {
        min-width: @microCircularLabelMinWidth;
        min-height: @microCircularLabelMinHeight;
        &.spaced {
            &-left {
                margin-left: @microCircularLabelLeftMargin;
            }
            &-right {
                margin-right: @microCircularLabelRightMargin;
            }
        }
    }
}

.ui.circular.label {
    &.status-label-with-popup {
        cursor: pointer !important;
        opacity: .7 !important;

        &:hover {
            opacity: 1 !important;
        }
    }
}

/*******************************
        Header Label
*******************************/

.ui.header {
    .ui.label {
        &.no-margin-left {
            margin-left: 0 !important;
        }
    }
}
