{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules"
    ],
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "jsx-curly-spacing": [
            true,
            "always"
        ],
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-boolean-value": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "functions": "never"
                },
                "esSpecCompliant": true
            }
        ],
        "member-access": false,
        "no-implicit-dependencies": {
            "severity": "error",
            "options": [
                true,
                "dev",
                [
                    "react",
                    "react-dom",
                    "react-test-renderer",
                    "rimraf",
                    "semantic-ui-react",
                    "semantic-ui-css",
                    "typescript",
                    "classnames"
                ]
            ]
        },
        "object-curly-spacing": [
            true,
            "always"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    }
}
